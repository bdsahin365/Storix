{
    "version": 2,
    "builds": [
        {
            "src": "apps/web/package.json",
            "use": "@vercel/next"
        },
        {
            "src": "apps/backend/package.json",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "apps/backend/dist/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "apps/backend/dist/main.js"
        },
        {
            "src": "/(.*)",
            "dest": "apps/web/$1"
        }
    ],
    "env": {
        "NEXT_PUBLIC_API_URL": "/api"
    }
}