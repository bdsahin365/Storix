{
    "version": 2,
    "builds": [
        {
            "src": "apps/web/package.json",
            "use": "@vercel/next"
        },
        {
            "src": "apps/backend/src/serverless.ts",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "apps/backend/dist/**",
                    "apps/backend/src/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/apps/backend/src/serverless.ts"
        },
        {
            "src": "/(.*)",
            "dest": "/apps/web/$1"
        }
    ]
}