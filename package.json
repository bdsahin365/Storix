{
    "name": "storix-monorepo",
    "version": "0.0.1",
    "private": true,
    "workspaces": [
        "apps/*"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev:web\" \"npm run dev:backend\"",
        "dev:web": "npm run dev --workspace=web",
        "dev:backend": "npm run start:dev --workspace=backend",
        "build": "npm run build:backend && npm run build:web",
        "build:web": "npm run build --workspace=web",
        "build:backend": "npm run build --workspace=backend",
        "vercel-build": "npm run build:backend && npm run build:web"
    },
    "devDependencies": {
        "concurrently": "^9.1.2"
    }
}